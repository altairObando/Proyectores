@model Proyectores.Models.Especialidad

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-10">
        <div class="panel-group">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 style="color: palevioletred; text-align:center;"><strong>Agregar nueva Especialidad</strong></h3>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-md-10">
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombre, "Especialidad", htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de la Especialidad" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                   <hr />
                    <br /><br />
                    @*----------------------------------------------------------*@


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("Index")" class="btn btn-danger" style="margin-left: 10px">
                                <em class="glyphicon glyphicon-backward"></em>  Volver
                            </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button type="submit" class="btn btn-danger">Guardar<em class="glyphicon glyphicon-save"></em></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
