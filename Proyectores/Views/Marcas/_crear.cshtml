<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "control-label col-md-2" >Nueva Marca</label>
        <div class="col-md-4">
            <input type="text" name="marca" value="" id="marca" class="form-control" />
        </div>   
        <input type="submit" value="Crear" class="btn btn-default" onclick="crearMarca()"/>  
    </div>
</div>
<script type="text/javascript">
    function crearMarca() {
        
        var marca = $("#marca").val();

        if (marca == "") {
            alert("Ingrese el nombre de la marca");
            return;
        }
        var json = JSON.stringify(marca);
        $.ajax({
            url: "/Marcas/Create",
            type: 'post',
            dataType: 'json',
            data: json,
            contentType: 'application/json; chartset=utf8',
            succes: function (data) {
                var message = data.message;

            }
        })

    }
</script>