@model Proyectores.Models.Devolucion

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-10">
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-md-10">
                <div class="panel-group">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 style="color: palevioletred; text-align: center;"><strong>Agregar nueva Devolución</strong></h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.id_prestamo, "Id_prestamo", htmlAttributes: new { @class = "control-label col-md-2" })
                                  
                                    @*<div class="form-group">
                                        @Html.DropDownList("id_prestamo", null, htmlAttributes: new { @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.id_prestamo, "", new { @class = "text-danger" })
                                    </div>*@
                                 
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.hora, "Hora", htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", @placeholder = "Hora" } })
                                        @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.anulada, "Anular", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.anulada)
                                            @Html.ValidationMessageFor(model => model.anulada, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>


                            @*----------------------------------------------------------*@

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("Index")" class="btn btn-danger" style="margin-left: 10px">
                                        <em class="glyphicon glyphicon-backward"></em>  Volver
                                    </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button type="submit" class="btn btn-danger">Guardar <em class="glyphicon glyphicon-save"></em></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
