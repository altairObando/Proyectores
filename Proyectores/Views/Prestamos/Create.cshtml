@model Proyectores.Models.Prestamo

@{
    ViewBag.Title = "Registrar Prestamo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-10">
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-md-10">
                <div class="panel-group">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 style="color: palevioletred; text-align:center;"><strong>Agregar nuevo Prestamo</strong></h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="col-md-5">
                                    <div class="form-group">
                                            <label class="control-label col-md-2">Proyector</label>
                                            @Html.DropDownList("id_proyector", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.id_proyector, "", new { @class = "text-danger" })
                                        </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                            <label class="control-label col-md-2">Docente</label>
                                            @Html.DropDownList("id_docente", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.id_docente, "", new { @class = "text-danger" })
                                        </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Fecha      </label>
                                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control date-picker" } })
                                        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Anulado</label>
                                        <div class="checkbox">
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;  @Html.EditorFor(model => model.prestamo_anulado)
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;  @Html.ValidationMessageFor(model => model.prestamo_anulado, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Finalizado </label>
                                        <div class="checkbox">
                                            &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; @Html.EditorFor(model => model.finalizado)
                                            &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;  @Html.ValidationMessageFor(model => model.finalizado, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-2">Activo</label>
                                        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; @Html.CheckBoxFor(model => model.activo)
                                        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;   @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>

                            @*----------------------------------------------------------*@
                            <hr />
                            <br /><br />
                            <div class="form-group">

                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("Index")" class="btn btn-danger" style="margin-left: 10px">
                                        <em class="glyphicon glyphicon-backward"></em>  Volver
                                    </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button type="submit" class="btn btn-danger">Guardar<em class="glyphicon glyphicon-save"></em></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
                <script>$(".date-picker").datepicker();</script>
