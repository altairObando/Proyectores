@model Proyectores.Models.Prestamo

@{
    ViewBag.Title = "Registrar Prestamo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Prestamo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2" >Proyector</label>
            <div class="col-md-5">
                @Html.DropDownList("id_proyector", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_proyector, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Docente</label>
            <div class="col-md-5">
                @Html.DropDownList("id_docente", null,  htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_docente, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Fecha</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Anulado</label>
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.prestamo_anulado)
                    @Html.ValidationMessageFor(model => model.prestamo_anulado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Finalizado</label>
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.finalizado)
                    @Html.ValidationMessageFor(model => model.finalizado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Activo</label>
            <div class="col-md-5">
                    @Html.CheckBoxFor(model => model.activo)
                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>$(".date-picker").datepicker();</script>