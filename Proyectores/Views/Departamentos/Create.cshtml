@model Proyectores.Models.Departamento

@{
    Layout = null;
}
<div class="col-md-10">
    <div class="container">
        @using (Html.BeginForm("Create","Departamentos", FormMethod.Post, new {onsubmit = "return SubmitForm(this)" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-10">
                <div class="panel-group">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 style="color: palevioletred; text-align:center;"><strong>Agregar nuevo Departamento</strong></h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })                              
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-4" })
                                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre del departamento" } })
                                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>                             

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.mision, htmlAttributes: new { @class = "control-label col-md-4" })
                                        @Html.EditorFor(model => model.mision, new { htmlAttributes = new { @class = "form-control", @placeholder= "Mision del departamento" } })
                                        @Html.ValidationMessageFor(model => model.mision, "", new { @class = "text-info" })
                                    </div>
                                </div>
                              
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.vision, htmlAttributes: new { @class = "control-label col-md-4" })

                                        @Html.EditorFor(model => model.vision, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vision del departamento" } })
                                        @Html.ValidationMessageFor(model => model.vision, "", new { @class = "text-info" })
                                    </div>
                                </div>
                              
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.historia, htmlAttributes: new { @class = "control-label col-md-4" })
                                        @Html.EditorFor(model => model.historia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Historia del departamento" } })
                                        @Html.ValidationMessageFor(model => model.historia, "", new { @class = "text-info" })
                                    </div>
                                </div>
                            
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ubicacion, htmlAttributes: new { @class = "control-label col-md-4" })
                                        @Html.EditorFor(model => model.ubicacion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ubicación del departamento" } })
                                        @Html.ValidationMessageFor(model => model.ubicacion, "", new { @class = "text-info" })
                                    </div>
                                </div>
                             
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.organizacion, htmlAttributes: new { @class = "control-label col-md-4" })
                                        @Html.EditorFor(model => model.organizacion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Organización" } })
                                        @Html.ValidationMessageFor(model => model.organizacion, "", new { @class = "text-info" })
                                    </div>
                                </div>                             
                            </div>
                            @*<div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                     <input type="submit" value="Guardar"  class="btn btn-danger " />
                                    </div>
                                </div>*@

                            @*----------------------------------------------------------*@
                            <hr />
                            <br /><br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("Index")" class="btn btn-danger" style="margin-left: 10px">
                                        <em class="glyphicon glyphicon-backward"></em>  Volver
                                    </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button type="submit" class="btn btn-danger">Guardar<em class="glyphicon glyphicon-save"></em></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                }

            </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
